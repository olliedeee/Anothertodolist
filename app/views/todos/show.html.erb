<h2>Task name: <%= @todo.name %><br></h2>


<b>To do number:</b> <%= @todo.id %> <br>
<b>Task detail:</b> <%= @todo.description %>
<br>
<br><br>
<br>
<br>
 <% if can? :update, @todo %>
    <td> <%= link_to "Edit this todo", edit_todo_path(@todo), class: "btn btn-info btn-xs round" %></td>   | 
    <% end %>
     <% if can? :destroy, @todo %>
    <%= link_to "Destroy this todo", todo_path(@todo), method: :delete, data: {confirm: "are you sure?"},
    class: "btn btn-danger btn-xs round" %> | 
    <% end %>
    <td> <%= link_to "See all Todos", todos_path, class: "btn btn-success btn-xs round" %></td>
<hr>
<h3> Comments</h3>
<br>
<% if @todo.comments.any? %>
<%= render @todo.comments %>
    
<% else %>
    <p> This todo item has no comments.</p>
<% end %>





<hr><br>
<%= render 'comments/form' %>

<hr>


